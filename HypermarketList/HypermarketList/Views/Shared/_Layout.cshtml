<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <!-- Meta tag Keywords -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="UTF-8" />
    <meta name="keywords"
          content="Land Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template, Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script>
        addEventListener("load", function () {
            setTimeout(hideURLbar, 0);
        }, false);

        function hideURLbar() {
            window.scrollTo(0, 1);
        }
    </script>
    <!-- //Meta tag Keywords -->
    <!-- Custom-Files -->
    <link href="../../Content/bootstrap.css" rel='stylesheet' type='text/css' />
    <!-- Bootstrap-Core-CSS -->
    <link href="../../Content/style.css" rel='stylesheet' type='text/css' />
    <!-- Style-CSS -->
    <link href="../../Content/font-awesome.min.css" rel="stylesheet">
    <!-- Font-Awesome-Icons-CSS -->
    <!-- //Custom-Files -->
    <!-- Web-Fonts -->
    <link href="//fonts.googleapis.com/css?family=Roboto+Condensed:300,300i,400,400i,700,700i&amp;subset=cyrillic,cyrillic-ext,greek,greek-ext,latin-ext,vietnamese"
          rel="stylesheet">
    <link href="//fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i&amp;subset=cyrillic,cyrillic-ext,greek,greek-ext,latin-ext,vietnamese"
          rel="stylesheet">
    <!-- //Web-Fonts -->
</head>
<body>
    <!-- header -->
    <header>
        <div class="container">
            <div class="header d-lg-flex justify-content-between align-items-center py-2 px-sm-2 px-1">
                <!-- logo -->
                <div id="logo">
                    <h1><a href="@Url.Action("Index", new { name = ViewBag.username })" class="navbar-brand">Discovery Hypermarket</a></h1>
                </div>
                <!-- //logo -->
                <!-- nav -->
                <div class="nav_w3ls ml-lg-5">
                    <nav>
                        <label for="drop" class="toggle"><span class="fa fa-bars" aria-hidden="true"></span></label>
                        <input type="checkbox" id="drop" />
                        <ul class="menu">
                            <li><a href="@Url.Action("Index", new { name = ViewBag.username })">首頁</a></li>
                            <li>
                                <!-- First Tier Drop Down -->
                                <a href="#">公司列表 <span class="fa fa-angle-down" aria-hidden="true"></span></a>
                                <input type="checkbox" id="drop-2" />
                                <ul>
                                    <li><a href="@Url.Action("Company", new { cName = "Costco", name = ViewBag.username })" class="drop-text">好市多</a></li>
                                    <li><a href="@Url.Action("Company", new { cName = "RT-MART", name = ViewBag.username })" class="drop-text">大潤發</a></li>
                                    <li><a href="@Url.Action("Company", new { cName = "Carrefour", name = ViewBag.username })" class="drop-text">家樂福</a></li>
                                    <li><a href="@Url.Action("Company", new { cName = "a.mart", name = ViewBag.username })" class="drop-text">愛買</a></li>
                                    <li><a href="@Url.Action("Company", new { cName = "Wellcome", name = ViewBag.username })" class="drop-text">頂好</a></li>
                                    <li><a href="@Url.Action("Company", new { cName = "PX MART", name = ViewBag.username })" class="drop-text">全聯</a></li>
                                </ul>
                            </li>
                            @RenderSection("LoginedSection", required: true)
                        </ul>
                    </nav>
                </div>
                <!-- //nav -->
            </div>
        </div>
    </header>
    <!-- //header -->
    <!-- content -->
    @RenderBody()
    <!-- //content -->
    <!-- copyright -->
    <div class="copyright-w3ls py-4">
        <div class="container">
            <div class="row">
                <!-- copyright -->
                <p 
                   class="col-lg-8 copy-right-grids text-wh text-lg-left text-center mt-lg-2"
                   style="color:#ffffff;">
                    © @DateTime.Now.Year. All Rights Reserved by e609
                </p>
                <!-- //copyright -->
            </div>
        </div>
    </div>
    <!-- //copyright -->
</body>
</html>
